{
  "name": "creedengo-dashboard",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "coverage": "vitest run --coverage",
    "serve:sonar": "node src/api/sonar/mock/server.js",
    "sonar": "pnpm coverage && pnpm exec sonar-scanner -Dsonar.login=$SONAR -Dsonar.host.url=http://localhost:9000",
    "lint": "eslint src --fix", 
    "format": "prettier --write src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "vue": "^3.5.17",
    "vue3-toastify": "^0.2.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@creedengo/eslint-plugin": "^2.1.0",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.8.0",
    "@playwright/test": "^1.53.1",
    "@storybook/addon-a11y": "9.0.15",
    "@storybook/addon-coverage": "^1.0.4",
    "@storybook/addon-docs": "^9.0.15",
    "@storybook/addon-links": "9.0.15",
    "@storybook/builder-vite": "^9.0.15",
    "@storybook/vue3": "9.0.15",
    "@storybook/vue3-vite": "9.0.15",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "axe-playwright": "^2.0.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-storybook": "^9.0.15",
    "eslint-plugin-vue": "^9.27.0",
    "globals": "^15.9.0",
    "jest": "^30.0.3",
    "jsdom": "^24.1.0",
    "msw": "^2.10.2",
    "msw-storybook-addon": "^2.0.5",
    "prettier": "3.5.3",
    "sonarqube-scanner": "^4.3.0",
    "storybook": "9.0.15",
    "transform": "link:@storybook/test-runner/playwright/transform",
    "vite": "^6.3.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
